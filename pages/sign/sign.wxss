/**index.wxss**/
/*对安卓机进行隐藏canvas层*/
page {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.container {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}
.main-content {
  width: 100%;
  height: 100%;
}
.signdata {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  position: relative;
}
.sign-wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
}
.sign-info {
  position: absolute;
  top: 108rpx;
  left: 50%;
  transform: translateX(-50%);
}
.sign-info .txt {
  font-size: 36rpx;
  color: #FFFFFF;
}
.sign-info .strong {
  font-size: 72rpx;
}
.run,
.join {
  height: 72rpx;
  line-height: 72rpx;
}

.quote-txt {
  margin-bottom: 30rpx;
}
.quote-txt .txt {
  font-size: 30rpx;
  color: #FFFFFF;
}
.sign-img {
  margin: 0 auto;
  width: 100%;
  height: 100%;
}
.sign-text {
  width: 100%;
  overflow: hidden;
  margin: 30rpx auto;
  text-align: center;
  color: white;
}
.sign-text textarea {
  width: 100%;
  margin: 0 auto;
  font-size: 28rpx;
  color: white;
}
.qr-code {
  width: 250rpx;
  height: 250rpx;
  position: absolute;
  bottom: 329rpx;
  left: 50%;
  transform: translateX(-50%);
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.qrcode-txt {
  position: absolute;
  bottom: 229rpx;
  left: 50%;
  transform: translateX(-50%);
}

.qrcode-txt .txt {
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #FFFFFF;
}
.btn-wrapper {
  position: absolute;
  z-index: 100;
  left: 50%;
  transform: translateX(-50%);
  bottom: 75rpx;
}
