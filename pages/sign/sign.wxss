/**index.wxss**/
/*对安卓机进行隐藏canvas层*/
page {
  position: relative;
  overflow: hidden;
}
.punch-btn {
  height: auto;
  margin: 100rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.signdata {
  width: 80%;
  /*margin-top: 30rpx;*/
  margin: 30rpx auto 0 auto;
  position: relative;
}
.sign-wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
}
.sign-info {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 140rpx;
  left: 50%;
  transform: translateX(-50%);
}
.sign-info text {
  font-size: 24rpx;
  color: #FFFFFF;
}
.run {
  margin-top: 40rpx;
}
.sign-img {
  margin: 0 auto;
  width: 100%;
  max-height: 100%;
  max-width: 100%;
}
.sign-text {
  width: 100%;
  overflow: hidden;
  margin: 30rpx auto;
  text-align: center;
  color: white;
}
.sign-text textarea {
  width: 100%;
  margin: 0 auto;
  font-size: 28rpx;
  color: white;
}
.qr-code {
  width: 360rpx;
  height: 360rpx;
  position: absolute;
  top: 330rpx;
  left: 50%;
  transform: translateX(-50%);
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
