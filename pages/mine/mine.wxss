/**mine.wxss**/
@import '/templates/modal.wxss';
.banner-wrapper {
  position: relative;
  height: 310rpx;
  overflow: hidden;
}
.userinfo {
  position: absolute;
  left: 50%;
  top: 60rpx;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}
.cover-bg {
  width: 750rpx;
  /*height: 450rpx;*/
}
.usercontent {
  /*padding: 0 20rpx;*/
}
.userspirit {
  width: 100%;
  height: 130rpx;
  padding-top: 14rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #FFFFFF;
}
.spirit-item {
  height: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.spirit-desc {
  display: flex;
  align-items: center;
  padding: 10rpx 38rpx 32rpx 32rpx;
}
.spirit-desc text {
  width: 100%;
  line-height: 50rpx !important;
  word-wrap: break-word;
  font-size: 20rpx;
  color: #999999
}
.spirit-item .txt {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #999999
}
.spirit-img {
  width: 100%;
  max-width: 100%;
}
.arrow-btn {
  margin-left: 16rpx;
  height: 0;
  width: 0;
  border-top: 20rpx solid #1988CC;
  border-right: 20rpx solid transparent;
  border-left: 20rpx solid transparent;
}
.spirit-record {
  display: flex;
  align-items: center;
}
.icon {
  width: 58rpx;
  height: 48rpx;
}
.spirit-merchand {
  width: 100%;
  background-color: #FFFFFF;
}
.spirit-merchand .title {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 32rpx;
}
.title text {
  font-size: 28rpx;
  color: #333333;
}
