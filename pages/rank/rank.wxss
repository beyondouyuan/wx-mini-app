/**index.wxss**/
@import '/templates/nav.wxss';
@import '/templates/list.wxss';

page {
  position: relative;
}
.container {
  min-height: 100vh;
}
.scroll-rank-list {
  margin-top: 0rpx;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0 20rpx 0 36rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #FFFFFF;
}
.main-content {
  padding: 0 20rpx;
}
.punch-btn {
  margin: 50rpx 0;
}
.step-total {
  width: 100%;
  height: 98rpx;
  margin-bottom: 10rpx;
  line-height: 98rpx;
  text-align: center;
  border-bottom: 1rpx solid #E8E8E8;
  background-color: #FFFFFF;
}


.step-total text {
  font-size: 30rpx;
  color: #3C82FE;
}

