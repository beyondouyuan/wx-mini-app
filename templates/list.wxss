.scroll-rank-list {
    overflow: hidden;
    margin-top: 72rpx;
}
.rank-list {
    position: relative;
    overflow: hidden;
    padding: 15rpx 30rpx;
    border-bottom: 1rpx solid #EEEEEE;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.rank-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.rank-item {
    margin-left: 50rpx;
}
.rank-item text {
    font-size: 28rpx;
    color: #464646;
}
.rank-list:nth-child(-n+2) text {
    color: #F3AD09
}
