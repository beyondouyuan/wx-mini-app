.star {
    border-color: #FFDD44 transparent transparent transparent;
    border-style: solid;
    border-top-width: 3.5px;
    border-right-width: 7px;
    border-left-width: 7px;
    height: 0;
    position: absolute;
    width: 0;
}
.star:before,
.star:after {
    border-color: #FFDD44 transparent transparent transparent;
    border-style: solid;
    border-top-width: 3.5px;
    border-right-width: 7px;
    border-left-width: 7px;
    content: '';
    display: block;
    height: 0;
    left: -7px;
    position: absolute;
    top: -3.5px;
    width: 0;
}
.star:before {
    transform: rotate(70deg);
}
.star:after {
    transform: rotate(-70deg);
}
.txt-id {
    width: 48rpx;
    text-align: center;
}
